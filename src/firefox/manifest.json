{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "__MSG_short_name__",
  "description": "__MSG_description__",
  "version": "6.0",
  "default_locale": "en",
  "icons": { "16": "img/icons/dark/16.png", "48": "img/icons/dark/48.png", "128": "img/icons/dark/128.png" },
  "browser_action": { "default_title": "__MSG_title__", "default_icon": { "16": "img/icons/dark/16.png", "24": "img/icons/dark/24.png", "32": "img/icons/dark/32.png" }, "default_popup": "html/popup.html" },
  "options_ui": { "page": "html/options.html", "browser_style": true },
  "background": { "scripts": ["js/promisify.js", "js/background.js", "js/action.js", "js/increment-decrement.js", "js/auto.js", "js/save-urls.js", "js/cryptography.js"] },
  "commands": { "increment": { "description": "Increment [+]" },
                "decrement": { "description": "Decrement [-]" },
                "next":      { "description": "Next [>]" },
                "prev":      { "description": "Prev [<]" },
                "clear":     { "description": "Clear [x]" },
                "return":    { "description": "Return To Start" },
                "auto":      { "description": "Auto Pause / Resume" }},
  "permissions": ["activeTab", "storage"],
  "optional_permissions": ["downloads"],
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["js/shortcuts.js"] }],
  "applications": { "gecko": { "id": "urli@url-incrementer", "strict_min_version": "60.1.0" } }
}